#!/bin/sh
set -e

# 1. Instalacja Ollama
curl -fsSL https://ollama.com/install.sh | sh

# 2. Ustawienie Privy Shell jako domyślnej powłoki dla roota i nowego usera
# Uwaga: live-build tworzy użytkownika 'user', my nadpiszemy mu shella
echo "Zmiana shella na PrivyOS..."
echo "/usr/local/bin/privy" >> /etc/shells

# 3. Włączenie serwisu Ollama
systemctl enable ollama
